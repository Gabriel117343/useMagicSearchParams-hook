{
  "compilerOptions": {
    "jsx": "react-jsx", // Asegura que el compilador de TypeScript pueda compilar JSX (solo para migrar de js a ts)
    "target": "ESNext",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@components/*": ["./src/components/*"],
    }
  }
}
